{% extends 'adminbase.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h1>Product index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>Size</th>
				<th>Color</th>
				<th>Image</th>
				<th>Amount</th>
				<th>Qty_stck</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.size }}</td>
					<td>{{ product.color }}</td>
					<td>{{ product.image }}</td>
					<td>{{ product.amount }}</td>
					<td>{{ product.qtyStck }}</td>
					<td>
						<a href="{{ path('product_show', {'id': product.id}) }}">show</a>
						<a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
